{
  "name": "seaboard-ai-modernization-poc",
  "version": "1.0.0",
  "description": "AI-driven modernization of IBM i legacy systems to cloud-native solutions",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc -p configs/tsconfig.json",
    "build:watch": "tsc -p configs/tsconfig.json --watch",
    "start": "node dist/index.js",
    "start:dev": "ts-node --project configs/tsconfig.json src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"src/**/*.{ts,js}\" \"scripts/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" \"scripts/**/*.js\" --fix",
    "format": "prettier --config configs/.prettierrc --write \"src/**/*.{ts,js}\" \"scripts/**/*.js\" \"*.md\"",
    "format:check": "prettier --config configs/.prettierrc --check \"src/**/*.{ts,js}\" \"scripts/**/*.js\" \"*.md\"",
    "validate": "node scripts/validate-structure.js",
    "report": "node scripts/generate-report.js",
    "report:all": "node scripts/generate-report.js all",
    "clean": "rimraf dist coverage *.log *-report-*.json",
    "precommit": "npm run lint && npm run format:check && npm run test",
    "prepare": "npm run build",
    "health": "node -e \"console.log('Health check passed')\"",
    "dev": "concurrently \"npm run build:watch\" \"nodemon dist/index.js\"",
    "dev:frontend": "vite --config vite.config.ts",
    "build:frontend": "vite build --config vite.config.ts",
    "dev:fullstack": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "dev:fullstack:mock": "cross-env USE_MOCK_DB=true concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "dev:fullstack:prod": "cross-env USE_MOCK_DB=false concurrently \"npm run dev\" \"npm run dev:frontend\""
  },
  "keywords": [
    "ibm-i",
    "as400",
    "modernization",
    "legacy-migration",
    "cloud-native",
    "typescript",
    "nodejs",
    "ai-driven"
  ],
  "author": {
    "name": "Seaboard Modernization Team",
    "email": "modernization@seaboard.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Purvanshjain23/Repo_Indexing.git"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.8.1",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.0.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/src/**/*.test.ts",
      "**/src/**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
